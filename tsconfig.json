{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "importHelpers": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2016"],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "pages/*": ["./src/pages/*"],
      "routes/*": ["./src/routes/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
